<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:spinnerMode="dialog"
        android:entries="@array/level"
        android:id="@+id/levelselect">
    </Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bt_block1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:background="@color/colorPrimary"
            android:onClick="pressed"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Button
            android:id="@+id/bt_block2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:background="@color/colorPrimary"
            android:onClick="pressed"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Button
            android:id="@+id/bt_block3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:background="@color/colorPrimary"
            android:onClick="pressed"
            android:textColor="@color/white"
            android:textSize="40sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bt_block4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:background="@color/colorPrimary"
            android:onClick="pressed"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Button
            android:id="@+id/bt_block5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:background="@color/colorPrimary"
            android:onClick="pressed"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Button
            android:id="@+id/bt_block6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:background="@color/colorPrimary"
            android:onClick="pressed"
            android:textColor="@color/white"
            android:textSize="40sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bt_block7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:background="@color/colorPrimary"
            android:onClick="pressed"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Button
            android:id="@+id/bt_block8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:background="@color/colorPrimary"
            android:onClick="pressed"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Button
            android:id="@+id/bt_block9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:background="@color/colorPrimary"
            android:onClick="pressed"
            android:textColor="@color/white"
            android:textSize="40sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_show_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/bt_restart_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="@string/restart_button_text_in_middle_of_game"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/see_graphs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Statistics"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</LinearLayout>
